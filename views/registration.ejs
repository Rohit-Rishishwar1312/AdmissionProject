<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <link rel="stylesheet" href="css/style.css">
    <title>Register</title>
  </head>
  <body>

    <nav class="navbar navbar-light bg-success">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">
            <img src="image/learn.jpg" alt="" width="40" height="24" class="d-inline-block align-text-right">
            Student Course Enrollment System
          </a>
        </div>
      </nav>

      <section style="background-color: #12587a;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="image/faculty.png" alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;">
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 text-black">
                                    <div class="d-flex align-items-center  pb-1">
                                        <img src="image/learn.jpg" class="register_logo" width="120px" height="120px" alt="....">
                                    </div>

                                    <h5 class="text-center mb-3 pb-3 regs_heading text-primary">
                                        Register Here</h5>

                                        

                                        <form action="/userinsert" method="post">
                                            <div class="form-group">
                                                <input type="text" placeholder="Name" name="name" class="form-control mt-3" required="">
                                            </div>
                                            <div class="form-group">
                                                <input type="email" placeholder="Email" name="email" class="form-control mt-3" required="">
                                            </div>
                                            <div class="form-group">
                                                <input type="password" placeholder="Password" id="" name="password" class="form-control mt-3" required="">
                                            </div>
                                            <div class="form-group">
                                                <input type="password" placeholder="Confirm Password" id="myInput" name="confirm_password" class="form-control mt-3" required="">
                                            </div>
                                            <input type="checkbox"><span>&nbsp;Show Password</span>
                                            <div class="form-group my-2">
                                                <label class="form-label">Profile Picture</label>
                                                <input type="file" name="profile_image" class="form-control" >
                                            </div>
                                            <div class="form-group text-center">
                                                <button type="submit" class="btn btn-info mt-3 form-control mb-3" style="background: #12587a; color: #ffff">
                                                    Register</button>
                                                <span class=" text-center pt-3">HAVE AN ACCOUNT?
                                                    <a style="color: #393f81;" href="">LOGIN NOW</a>
                                                </span>
                                            </div>
                                        </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

      
      
    

   

    
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    
  </body>
</html>