<!--Btech Modal -->
<div class="modal fade" id="btech" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">BTECH Registration</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/courseinsert" method="post">
            <div class="mb-3">
                <label>Name</label>
                <input type="text" name="name" class="form-control">  
            </div>
            <div class="mb-3">
                <label>Email</label>
                <input type="email" name="email" class="form-control" required>  
            </div>
            <div class="mb-3">
                <label>Phone No</label>
                <input type="number" name="phone" class="form-control" required>  
            </div>
            <div class="mb-3">
                <label>10th Number</label>
                <input type="number" name="tenth" class="form-control" required>  
            </div>
            <div class="mb-3">
                <label>12th Number</label>
                <input type="number" name="twelth" class="form-control" required>  
            </div>
            <div class="mb-3">
                <label>Course</label>
                <input type="text" name="course" value="Btech" class="form-control" readonly required>  
            </div>
            <button type="submit">Submit</button>

          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>

